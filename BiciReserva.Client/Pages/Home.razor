@page "/"

<PageTitle>Home</PageTitle>

<div class="user-main-dashboard container py-5">
    <h2 class="text-center mb-5">¡Bienvenido a <span class="text-success">BiciLink</span>!</h2>

    <div class="row g-4 justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="feature-card text-center h-100 p-4">
                <img src="image/Paseo.png" alt="Planificar ruta" class="img-fluid mb-3 rounded" />
                <h4>Elegí tu Ruta de Hoy</h4>
                <p>Planificá tu recorrido diario eligiendo origen y destino.</p>
                <RadzenButton Text="Planificar ruta" Style="margin-top:1rem" ButtonStyle="ButtonStyle.Primary" Click="@(() => Navigation.NavigateTo("/plan-ruta"))" />
            </div>
        </div>

        <div class="col-md-6 col-lg-4">
            <div class="feature-card text-center h-100 p-4">
                <img src="image/RutaIm.png" alt="Buscar paseo" class="img-fluid mb-3 rounded" />
                <h4>Explorá Nuevos Paseos</h4>
                <p>Descubrí rutas recomendadas o turísticas para disfrutar.</p>
                <RadzenButton Text="Buscar paseo" Style="margin-top:1rem" ButtonStyle="ButtonStyle.Success" Click="@(() => Navigation.NavigateTo("/paseos"))" />
            </div>
        </div>

        <div class="col-md-6 col-lg-4">
            <div class="feature-card text-center h-100 p-4">
                <img src="image/verifica.png" alt="Historial de viajes" class="img-fluid mb-3 rounded" />
                <h4>Revisá tus Viajes</h4>
                <p>Consultá el historial de tus trayectos y recorridos.</p>
                <RadzenButton Text="Ver historial" Style="margin-top:1rem" ButtonStyle="ButtonStyle.Secondary" Click="@(() => Navigation.NavigateTo("/historial"))" />
            </div>
        </div>

        <div class="col-md-6 col-lg-4">
            <div class="feature-card text-center h-100 p-4">
                <img src="image/ruta.png" alt="Bicis disponibles" class="img-fluid mb-3 rounded" />
                <h4>Verificá Bicis Disponibles</h4>
                <p>Consultá el estado actual de estaciones y bicicletas disponibles.</p>
                <RadzenButton Text="Ver disponibilidad" Style="margin-top:1rem" ButtonStyle="ButtonStyle.Warning" Click="@(() => Navigation.NavigateTo("/bicis"))" />
            </div>
        </div>
        <div class="col-md-6 col-lg-4">
            <div class="feature-card text-center h-100 p-4">
                <img src="image/Matenimiento.png" alt="Mantenimiento Bicis" class="img-fluid mb-3 rounded" />
                <h4>Mantenimiento de bicicletas</h4>
                <p>Ingresa y gestiona el mantenimiento de las bicicletas.</p>
                <RadzenButton Text="Mantenimiento" Style="margin-top:1rem" ButtonStyle="ButtonStyle.Warning" Click="@(() => Navigation.NavigateTo("/bicis"))" />
            </div>
        </div>
        <div class="col-md-6 col-lg-4">
            <div class="feature-card text-center h-100 p-4">
                <img src="image/Soporte.png" alt="Atención al Cliente" class="img-fluid mb-3 rounded" />
                <h4>Atención al Cliente</h4>
                <p>Consulta incidentes Reportados.</p>
                <RadzenButton Text="Soporte" Style="margin-top:1rem" ButtonStyle="ButtonStyle.Warning" Click="@(() => Navigation.NavigateTo("/bicis"))" />
            </div>
        </div>
    </div>
</div>

@code {
    [Inject] NavigationManager Navigation { get; set; }
}